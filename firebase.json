{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
    	{
    		"source": "/github",
    		"destination": "https://github.com/denniskupec/epoch.link",
    		"type": 301
    	}
    ]
  }
}
